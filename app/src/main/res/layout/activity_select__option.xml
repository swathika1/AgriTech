<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:accessibilityHeading="false"
        android:gravity="center_horizontal|center_vertical"
        tools:context=".MainActivity"
        android:background="@drawable/bg">




        <ImageButton
            android:id="@+id/b1"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:background="@drawable/home"
            android:padding="30dp"
            android:src="@drawable/home_logo" />



        <ImageButton
            android:id="@+id/b2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/b1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#005"
            android:padding="20dp"
            android:src="@drawable/crop_inf" />

        <ImageButton
            android:id="@+id/b3"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_below="@+id/b2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#005"
            android:padding="20dp"
            android:src="@drawable/soil_moi" />
        <ImageButton
            android:id="@+id/b6"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/b3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#005"
            android:padding="20dp"
            android:src="@drawable/heat_sens" />
        <ImageButton
            android:id="@+id/b7"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/b6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#005"
            android:padding="20dp"
            android:src="@drawable/water_lev" />
        <ImageButton
            android:id="@+id/b4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/b7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#005"
            android:padding="20dp"
            android:src="@drawable/crop_wat" />

        <ImageButton
            android:id="@+id/b5"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/b4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#005"
            android:padding="20dp"
            android:src="@drawable/farmer" />


    </RelativeLayout>
</ScrollView>